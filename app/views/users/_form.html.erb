
<div class="container">
  <%= render  "shared/form_errors", obj:@user %>
  <%=form_with model:@user, class:"shadow p-3 m-5 bg-dark text-white rounded", local: true  do |f|%>
    <div class="form-group row">
      <%=f.label :username, class:"col-md-2 col-sm-3 col-form-label"%>
      <div class="col-md-10 col-sm-9">
        <%= f.text_field :username, class:"form-control shadow"%>
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :email,class:"col-md-2 col-sm-3 col-form-label"%>
        <div class="col-md-10 col-sm-9">
          <%= f.email_field :email, class:"form-control shadow"%>
        </div>
    </div>
    <div class="form-group row">
      <%=f.label :password,class:"col-md-2 col-sm-3 col-form-label"%>
        <div class="col-md-10 col-sm-9">
          <%= f.password_field :password, class:"form-control shadow"%>
        </div>
    </div>
    <div class="form-group row justify-content-center">
      <%=f.submit (@user.new_record? ? "Sign Up": "Update Account"), class:"btn btn-outline-light btn-lg shadow"%>
    </div>
  <%end%>
  <div class="row justify-content-center mb-5">
    <%= link_to  "[ Cancel and Return to article listing ]", articles_path()  %>
  </div>
</div>